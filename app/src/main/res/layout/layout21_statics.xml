<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40sp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="历史记录"
            android:id="@+id/history"
            android:layout_weight="1"
            android:textSize="23sp"
            android:textColor="#6b8592"
            android:background="@drawable/retangle_green" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="相关统计"
            android:id="@+id/stat"
            android:textColor="#ff41bbbc"
            android:layout_weight="1"
            android:textSize="23sp"
            android:background="@drawable/retangle_green" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日学习时间"
            android:id="@+id/textView8"
            android:textColor="#ff43bbbc"
            android:textSize="20sp"
            android:padding="2dp"
            android:layout_marginLeft="10dp" />

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00小时00分"
            android:id="@+id/learn_today"
            android:textColor="#ff43bbbc"
            android:textSize="20sp"
            android:padding="2dp"
            android:layout_marginRight="15dp" />

    </LinearLayout>


    <View android:layout_height="1px"
        android:background="#ffd2d2d2"
        android:layout_width="fill_parent"
        android:layout_marginLeft="5dp"></View>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总共学习时间"
            android:id="@+id/textView9"
            android:textColor="#ff43bbbc"
            android:textSize="20sp"
            android:padding="2dp"
            android:layout_marginLeft="10dp" />

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00小时00分"
            android:id="@+id/learn_all"
            android:textColor="#ff43bbbc"
            android:textSize="20sp"
            android:padding="2dp"
            android:layout_marginRight="15dp" />

    </LinearLayout>


    <View android:layout_height="1px"
        android:background="#ffd2d2d2"
        android:layout_width="fill_parent"
        android:layout_marginLeft="5dp"></View>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学习失败次数"
            android:id="@+id/textView6"
            android:textColor="#ff43bbbc"
            android:textSize="20sp"
            android:padding="2dp"
            android:layout_marginLeft="10dp" />

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0次"
            android:id="@+id/fail_time"
            android:textColor="#ff43bbbc"
            android:textSize="20sp"
            android:padding="2dp"
            android:layout_marginRight="15dp" />

    </LinearLayout>


    <View android:layout_height="1px"
        android:background="#ffd2d2d2"
        android:layout_width="fill_parent"
        android:layout_marginLeft="5dp"></View>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"></TableRow>
</LinearLayout>

